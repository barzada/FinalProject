<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="210dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:id="@+id/product_RL_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_IMG_icon"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ls1"
            android:scaleType="fitXY"
            />

        <TextView
            android:paddingHorizontal="5dp"
            android:id="@+id/product_TV_title"
            android:text="T-Shirt"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/product_IMG_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            />

        <TextView
            android:id="@+id/product_TV_price"
            android:textColor="@color/price"
            android:text="39.00"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_below="@+id/product_TV_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>