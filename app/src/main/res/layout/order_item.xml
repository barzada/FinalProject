<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    >
    <RelativeLayout
        android:id="@+id/order_RL_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/order_TV_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="X"
            android:textColor="@color/lightText"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/order_TV_title"
            android:layout_below="@+id/order_TV_remove"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title....."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            />
        <LinearLayout
            android:padding="10dp"
            android:layout_below="@id/order_TV_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/order_TV_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400 NIS"
                    android:textColor="@color/price"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/order_TV_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XL"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/order_TV_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="16/02/2023 15:30"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
              <ImageView
                  android:id="@+id/order_IMG_icon"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:scaleType="fitXY"
                  android:src="@drawable/profile"
                  />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>